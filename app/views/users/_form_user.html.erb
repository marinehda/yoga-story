<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :birth_date %>
  <%= f.select :gender, ['Femme', 'Homme', 'Non-défini'] %>
  <%= f.input :phone %>
  <%= f.input :yoga_type %>
  <%= f.input :level %>
  <%= f.select :level, ['Débutant', 'Confirmé', 'Expert'] %>
  <%= f.input :address, input_html: { id: 'user_input_autocomplete_address', placeholder: 'Start typing your address...' } %>
  <%= f.input :street_number, input_html: { id: 'street_number'} %>
  <%= f.input :street, input_html: { id: 'route'} %>
  <%= f.input :city, input_html: { id: 'locality'} %>
  <%= f.input :zipcode, input_html: { id: 'postal_code'} %>


  <% if @user.teacher? %>
    <%= f.input :experience %>
    <%= f.input :description %>
    <%= f.input :photos, as: :attachinary %>

  <% end %>

  <div class="text-center">
  <%= f.button :submit %></div>
<% end %>
